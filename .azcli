# -----------------------------------------------------------------------------------
# AZ VM
# -----------------------------------------------------------------------------------
az vm start/stop/deallocate -g rgLVF -n vmDev

# -----------------------------------------------------------------------------------
# AZ DISK
# -----------------------------------------------------------------------------------
az disk create -n vmDev-os --source vmDev-os-snapshot --sku Premium_LRS --size-gb 32 -g rgLVF

# -----------------------------------------------------------------------------------
# AZ NETWORK
# -----------------------------------------------------------------------------------
# create network watcher first to avoid having azure automatically create a NetworkWatcherRG
az network watcher configure -g lvf --locations southeastasia --enabled true
# keeping the defaultwill create a single address space 10.0.0.0/16 with a default subnet of 10.0.0.0/24
az network vnet create -n vnet-1 -g lvf --subnet-name default
az network nsg create -n nsg-1 -g lvf
az network nsg rule create -n rule100 --nsg-name nsg-1 -g lvf --priority 100 --access Deny --source-address-prefixes $ip --destination-port-ranges 22 3389
az network public-ip create -n ip-1 -g lvf --allocation-method Static --sku Basic --version IPv4
az network nic create -n nic-1 -g lvf --vnet-name vnet-1 --subnet default --public-ip-address ip-1 --network-security-group nsg-1

# -----------------------------------------------------------------------------------
# AZ SQL
# -----------------------------------------------------------------------------------
az sql server create -n lvf -g lvf --location southeastasia --admin-user van --admin-password ***