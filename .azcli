# -----------------------------------------------------------------------------------
# AZ VM
# -----------------------------------------------------------------------------------
az vm create -n vm00 -g lvf --nics nic00 --size F2s_v2 --ssh-key-values

# -----------------------------------------------------------------------------------
# AZ NETWORK
# -----------------------------------------------------------------------------------
# create network watcher first to avoid having azure automatically create a NetworkWatcherRG
az network watcher configure -g lvf --locations southeastasia --enabled true
# keeping the defaultwill create a single address space 10.0.0.0/16 with a default subnet of 10.0.0.0/24
az network vnet create -n vnetDefault -g lvf --subnet-name default
az network nsg create -n nsgDefault -g lvf
ip=$(zsh ~/desktop/dot/get-ip.sh)
az network nsg rule update -n rule100 --nsg-name nsgDefault -g lvf --priority 100 --access Deny --source-address-prefixes $ip --destination-port-ranges 22 3389
az network public-ip create -n ipDev -g lvf --allocation-method Static --sku Basic --version IPv4
az network nic create -n nicDev -g lvf --vnet-name vnetDefault --subnet default --public-ip-address ipDev --network-security-group nsgDefault

